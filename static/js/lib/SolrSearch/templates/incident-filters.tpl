<div class="header incident-display">
  <div class="padding">
    <div class="group is-creator">
      <button class="do-create-incident create">
        <span class="text T">New incidents</span>
      </button>
    </div>
  </div>
</div>
<div class="body incident-filter" style="top: 62px;">
  <div class="padding">
    <div class="group is-filters filters">
      <!-- enabled filters -->
      <div class="filter is-labels">
        <label id="actor-selected-label" class="hidden">Current filters</label>
        <ul id="actor-selected-tags" class="tags editor">
        </ul>
      </div>

      <!-- Nationality filters -->
      <div class="filter">
        <label>Nationality</label>
        <ul class="select" id="nationality-filter">
          <li class="option">
            <span class="text T">Syrian(29)</span>
          </li>
          <li class="option">
            <span class="text T">Accusantium earu(1)</span>
          </li>
          <li class="option">
            <span class="text T">Aliquid al(1)</span>
          </li>
          <li class="option">
            <span class="text T">Amet laudanti(1)</span>
          </li>
        </ul>
      </div>

      <!-- gender filters -->
      <div class="filter">
        <label>Gender</label>
        <ul class="select" id="gender-filter">
          <li class="option">
            <span class="text T">Male(27)</span>
          </li>
          <li class="option">
            <span class="text T">Female(2)</span>
          </li>
        </ul>
      </div>

      <!-- age filters -->
      <div class="filter">
        <label>Age</label>
        <ul class="select" id="age-filter">
          <li class="option">
            <span class="text T">Adult(28)</span>
          </li>
          <li class="option">
            <span class="text T">Child(8)</span>
          </li>
        </ul>
      </div>

      <div class="filter">
        <label>Type</label>
          <ul class="select" id="civilian-filter">
            <li class="option">
              <span class="text T">Civilian(23)</span>
            </li>
            <li class="option">
              <span class="text T">Non-Civilian(6)</span>
            </li>
          </ul>
      </div>
    </div>
  </div>
</div>
